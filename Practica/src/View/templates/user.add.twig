{% extends "base.twig" %}
{% block title %}Register - {% endblock %}
{% block content %}
    <h1>Add user</h1>
    <form action="/users/add" METHOD="POST">
        <label for="name">Name:</label><input type="text" name="name">
        {% if errors.name is defined %}
            <p>{{ errors.name }}</p>
        {% endif %}
        <label for="email">Email:</label><input type="email" name="email">
        {% if errors.email is defined %}
            <p>{{ errors.email }}</p>
        {% endif %}
        <label for="birthdate">Birth Date:</label><input type="date" name="birthdate">
        {% if errors.birthdate is defined %}
            <p>{{ errors.birthdate }}</p>
        {% endif %}
        <label for="password">Password:</label><input type="password" name="password">
        {% if errors.password is defined %}
            <p>{{ errors.password }}</p>
        {% endif %}
        <label for="repeat_password">Repeat Password:</label><input type="password" name="repeat_password">
        {% if errors.password is defined %}
            <p>{{ errors.password }}</p>
        {% endif %}
        <input type="submit" value="Send">
        {% if errors.unexpected is defined %}
            <p>{{ errors.unexpected }}</p>
        {% endif %}
    </form>
{% endblock %}